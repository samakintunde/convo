{
  "name": "convo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "yarn build && node server/app.js",
    "dev": "concurrently \"yarn dev:client\" \"yarn dev:server\"",
    "dev:client": "parcel watch src/*.html",
    "dev:server": "nodemon server/app.js",
    "build": "concurrently \"yarn build:client\" \"yarn build:server\"",
    "build:server": "parcel build server/app.ts -d server/app.js",
    "build:client": "parcel build src/index.html"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^5.1.0",
    "express": "^4.16.3",
    "parcel-bundler": "^1.12.4",
    "socket.io": "^2.1.1"
  },
  "devDependencies": {
    "nodemon": "^1.19.1",
    "sass": "^1.26.3",
    "typescript": "^3.8.3"
  }
}
